@page "/Courses/Details/{id:int}"
@model LMSPlatform.Pages.Courses.DetailsModel
@{
    ViewData["Title"] = Model.Course?.GetTitle() ?? "Course Details";
}

@if (Model.Course != null)
{
    <!-- Course Header -->
    <div class="course-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item"><a href="/Courses">Courses</a></li>
                            <li class="breadcrumb-item active">@Model.Course.GetTitle()</li>
                        </ol>
                    </nav>
                    <h1 class="course-title">@Model.Course.GetTitle()</h1>
                    <p class="course-subtitle">@Model.Course.GetDescription()</p>
                    <div class="course-meta-info">
                        <span><i class="fas fa-layer-group"></i> @Model.Course.Modules.Count Modules</span>
                        <span><i class="fas fa-play-circle"></i> @Model.TotalLessons Lessons</span>
                        <span><i class="fas fa-users"></i> @Model.Course.Enrollments.Count Students</span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="course-enroll-card">
                        @if (!string.IsNullOrEmpty(Model.Course.ThumbnailURL))
                        {
                            <img src="@Model.Course.ThumbnailURL" alt="@Model.Course.GetTitle()" class="img-fluid rounded mb-3">
                        }
                        <div class="price-tag">
                            @if (Model.Course.Price > 0)
                            {
                                <span class="price">@Model.Course.Price.ToString("N0") MMK</span>
                            }
                            else
                            {
                                <span class="price free">Free</span>
                            }
                        </div>
                        
                        @if (Model.IsEnrolled)
                        {
                            <a href="/Dashboard" class="btn btn-success btn-lg w-100 mb-2">
                                <i class="fas fa-play me-2"></i>Continue Learning
                            </a>
                            <p class="text-center text-muted mb-0">
                                <small>Progress: @Model.ProgressPercentage.ToString("F0")%</small>
                            </p>
                        }
                        else if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (Model.Course.Price > 0)
                            {
                                <a href="/Payment/Checkout/@Model.Course.CourseID" class="btn btn-primary btn-lg w-100">
                                    <i class="fas fa-shopping-cart me-2"></i>Enroll Now
                                </a>
                            }
                            else
                            {
                                <form method="post" asp-page-handler="Enroll">
                                    <input type="hidden" name="courseId" value="@Model.Course.CourseID" />
                                    <button type="submit" class="btn btn-primary btn-lg w-100">
                                        <i class="fas fa-user-plus me-2"></i>Enroll Free
                                    </button>
                                </form>
                            }
                        }
                        else
                        {
                            <a href="/Identity/Account/Login?returnUrl=/Courses/Details/@Model.Course.CourseID" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-sign-in-alt me-2"></i>Login to Enroll
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8">
                <!-- Course Content -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-list me-2"></i>Course Content</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="accordion" id="courseContent">
                            @foreach (var module in Model.Course.Modules.OrderBy(m => m.ModuleOrder))
                            {
                                <div class="accordion-item">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#module-@module.ModuleID">
                                            <span class="module-title">
                                                <i class="fas fa-folder me-2"></i>@module.GetTitle()
                                            </span>
                                            <span class="badge bg-secondary ms-auto me-3">@module.Lessons.Count lessons</span>
                                        </button>
                                    </h2>
                                    <div id="module-@module.ModuleID" class="accordion-collapse collapse" data-bs-parent="#courseContent">
                                        <div class="accordion-body p-0">
                                            <ul class="list-group list-group-flush">
                                                @foreach (var lesson in module.Lessons.OrderBy(l => l.LessonOrder))
                                                {
                                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                                        <div>
                                                            @if (lesson.LessonType == LessonTypes.Video)
                                                            {
                                                                <i class="fas fa-play-circle text-primary me-2"></i>
                                                            }
                                                            else
                                                            {
                                                                <i class="fas fa-file-alt text-info me-2"></i>
                                                            }
                                                            @lesson.GetTitle()
                                                        </div>
                                                        @if (!Model.IsEnrolled)
                                                        {
                                                            <i class="fas fa-lock text-muted"></i>
                                                        }
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Course Features -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-star me-2"></i>This Course Includes</h5>
                    </div>
                    <div class="card-body">
                        <ul class="feature-list">
                            <li><i class="fas fa-video text-primary"></i> @Model.VideoLessons video lessons</li>
                            <li><i class="fas fa-file-alt text-info"></i> @Model.TextLessons text lessons</li>
                            <li><i class="fas fa-question-circle text-warning"></i> @Model.TotalQuizzes quizzes</li>
                            <li><i class="fas fa-tasks text-success"></i> @Model.TotalAssignments assignments</li>
                            <li><i class="fas fa-certificate text-danger"></i> Certificate of completion</li>
                            <li><i class="fas fa-infinity text-secondary"></i> Lifetime access</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container py-5 text-center">
        <i class="fas fa-exclamation-triangle fa-4x text-warning mb-4"></i>
        <h2>Course Not Found</h2>
        <p class="text-muted">The course you're looking for doesn't exist or has been removed.</p>
        <a href="/Courses" class="btn btn-primary">Browse Courses</a>
    </div>
}

<style>
.course-header {
    background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
    color: white;
    padding: 60px 0;
}

.course-header .breadcrumb {
    background: transparent;
    padding: 0;
    margin-bottom: 20px;
}

.course-header .breadcrumb-item a {
    color: rgba(255,255,255,0.8);
}

.course-header .breadcrumb-item.active {
    color: #ffb606;
}

.course-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 15px;
}

.course-subtitle {
    font-size: 1.1rem;
    opacity: 0.9;
    margin-bottom: 20px;
}

.course-meta-info {
    display: flex;
    gap: 30px;
    flex-wrap: wrap;
}

.course-meta-info span {
    display: flex;
    align-items: center;
    gap: 8px;
}

.course-meta-info i {
    color: #ffb606;
}

.course-enroll-card {
    background: white;
    border-radius: 15px;
    padding: 25px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.2);
}

.price-tag {
    text-align: center;
    margin-bottom: 20px;
}

.price-tag .price {
    font-size: 2rem;
    font-weight: 700;
    color: #333;
}

.price-tag .price.free {
    color: #27ae60;
}

.feature-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.feature-list li {
    padding: 12px 0;
    border-bottom: 1px solid #eee;
    display: flex;
    align-items: center;
    gap: 12px;
}

.feature-list li:last-child {
    border-bottom: none;
}

.accordion-button:not(.collapsed) {
    background: #f8f9fa;
    color: #333;
}

.module-title {
    font-weight: 500;
}
</style>
