@page "/Admin/Users/Edit/{id:int}"
@model LMSPlatform.Pages.Admin.Users.EditModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="page-header">
    <div class="container">
        <h1><i class="fas fa-user-edit me-3"></i>Edit User</h1>
        <p class="mb-0">Update user information and permissions</p>
    </div>
</div>

<div class="container">
    @if (Model.UserToEdit != null)
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">User Information</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" name="id" value="@Model.UserToEdit.Id" />
                            
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" value="@Model.UserToEdit.Email" disabled>
                                <small class="text-muted">Email cannot be changed</small>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Full Name</label>
                                <input type="text" name="FullName" class="form-control" 
                                       value="@Model.UserToEdit.FullName" required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Role</label>
                                <select name="Role" class="form-select">
                                    <option value="Student" selected="@(Model.UserToEdit.Role == "Student")">Student</option>
                                    <option value="Admin" selected="@(Model.UserToEdit.Role == "Admin")">Admin</option>
                                    <option value="Guest" selected="@(Model.UserToEdit.Role == "Guest")">Guest</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input type="checkbox" name="IsApprovedStudent" value="true" 
                                           class="form-check-input" id="isApproved"
                                           @(Model.UserToEdit.IsApprovedStudent ? "checked" : "")>
                                    <label class="form-check-label" for="isApproved">
                                        Approved Student (can access paid courses)
                                    </label>
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Save Changes
                                </button>
                                <a href="/Admin/Users" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- User Enrollments -->
                @if (Model.UserEnrollments.Any())
                {
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Enrollments (@Model.UserEnrollments.Count)</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Course</th>
                                            <th>Status</th>
                                            <th>Enrolled</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var enrollment in Model.UserEnrollments)
                                        {
                                            <tr>
                                                <td>@enrollment.Course?.GetTitle()</td>
                                                <td>
                                                    <span class="badge @(enrollment.IsActive ? "bg-success" : "bg-warning")">
                                                        @enrollment.Status
                                                    </span>
                                                </td>
                                                <td>@enrollment.EnrollmentDate.ToString("MMM dd, yyyy")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-4">
                <!-- User Stats -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">User Stats</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>User ID:</strong> @Model.UserToEdit.Id</p>
                        <p><strong>Joined:</strong> @Model.UserToEdit.CreatedAt.ToString("MMM dd, yyyy")</p>
                        <p><strong>Email Confirmed:</strong> 
                            @if (Model.UserToEdit.EmailConfirmed)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">No</span>
                            }
                        </p>
                        <p><strong>Enrollments:</strong> @Model.UserEnrollments.Count</p>
                    </div>
                </div>

                <!-- Danger Zone -->
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Danger Zone</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">Permanently delete this user and all their data.</p>
                        <form method="post" asp-page-handler="Delete">
                            <input type="hidden" name="id" value="@Model.UserToEdit.Id" />
                            <button type="submit" class="btn btn-danger w-100"
                                    onclick="return confirm('Are you sure you want to delete this user? This action cannot be undone.')">
                                <i class="fas fa-trash me-2"></i>Delete User
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">User not found.</div>
    }
</div>
