@page "/Admin/Courses/Modules/{id:int}"
@model LMSPlatform.Pages.Admin.Courses.ModulesModel
@{
    ViewData["Title"] = "Manage Modules";
}

<div class="page-header">
    <div class="container">
        <h1><i class="fas fa-layer-group me-3"></i>Manage Modules</h1>
        <p class="mb-0">@Model.Course?.GetTitle() - Add and organize course content</p>
    </div>
</div>

<div class="container">
    @if (Model.Course != null)
    {
        <div class="row">
            <div class="col-lg-8">
                <!-- Existing Modules -->
                @if (Model.Course.Modules.Any())
                {
                    <div class="accordion mb-4" id="modulesAccordion">
                        @foreach (var module in Model.Course.Modules)
                        {
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" 
                                            data-bs-toggle="collapse" data-bs-target="#module-@module.ModuleID">
                                        <span class="me-3">
                                            <i class="fas fa-folder text-warning"></i>
                                        </span>
                                        <strong>Module @module.ModuleOrder:</strong>&nbsp;@module.GetTitle()
                                        <span class="badge bg-secondary ms-auto me-3">@module.Lessons.Count lessons</span>
                                    </button>
                                </h2>
                                <div id="module-@module.ModuleID" class="accordion-collapse collapse" 
                                     data-bs-parent="#modulesAccordion">
                                    <div class="accordion-body">
                                        <!-- Lessons List -->
                                        @if (module.Lessons.Any())
                                        {
                                            <ul class="list-group mb-3">
                                                @foreach (var lesson in module.Lessons)
                                                {
                                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                                        <div>
                                                            @if (lesson.LessonType == "Video")
                                                            {
                                                                <i class="fas fa-play-circle text-primary me-2"></i>
                                                            }
                                                            else
                                                            {
                                                                <i class="fas fa-file-alt text-info me-2"></i>
                                                            }
                                                            @lesson.GetTitle()
                                                        </div>
                                                        <div>
                                                            <a href="/Admin/Courses/Lesson/@lesson.LessonID" 
                                                               class="btn btn-sm btn-outline-primary me-1" title="Add Quiz/Assignment">
                                                                <i class="fas fa-cog"></i>
                                                            </a>
                                                            <form method="post" asp-page-handler="DeleteLesson" class="d-inline">
                                                                <input type="hidden" name="courseId" value="@Model.Course.CourseID" />
                                                                <input type="hidden" name="lessonId" value="@lesson.LessonID" />
                                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                                        onclick="return confirm('Delete this lesson?')">
                                                                    <i class="fas fa-trash"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <p class="text-muted">No lessons yet.</p>
                                        }

                                        <!-- Add Lesson Form -->
                                        <div class="card bg-light">
                                            <div class="card-body">
                                                <h6 class="card-title">Add Lesson</h6>
                                                <form method="post" asp-page-handler="AddLesson">
                                                    <input type="hidden" name="courseId" value="@Model.Course.CourseID" />
                                                    <input type="hidden" name="moduleId" value="@module.ModuleID" />
                                                    <div class="row g-2">
                                                        <div class="col-md-4">
                                                            <input type="text" name="Title_EN" class="form-control form-control-sm" 
                                                                   placeholder="Lesson Title (EN)" required>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <select name="LessonType" class="form-select form-select-sm">
                                                                <option value="Video">Video</option>
                                                                <option value="Text">Text</option>
                                                            </select>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <input type="url" name="ContentURL" class="form-control form-control-sm" 
                                                                   placeholder="Video URL">
                                                        </div>
                                                        <div class="col-md-2">
                                                            <button type="submit" class="btn btn-sm btn-primary w-100">
                                                                <i class="fas fa-plus"></i> Add
                                                            </button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>

                                        <!-- Delete Module -->
                                        <div class="mt-3 text-end">
                                            <form method="post" asp-page-handler="DeleteModule" class="d-inline">
                                                <input type="hidden" name="courseId" value="@Model.Course.CourseID" />
                                                <input type="hidden" name="moduleId" value="@module.ModuleID" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                        onclick="return confirm('Delete this module and all its lessons?')">
                                                    <i class="fas fa-trash me-1"></i>Delete Module
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        No modules yet. Add your first module to get started.
                    </div>
                }
            </div>

            <div class="col-lg-4">
                <!-- Add Module Card -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Add Module</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="AddModule">
                            <input type="hidden" name="courseId" value="@Model.Course.CourseID" />
                            <div class="mb-3">
                                <label class="form-label">Title (English)</label>
                                <input type="text" name="Title_EN" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Title (Myanmar)</label>
                                <input type="text" name="Title_MM" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-plus me-2"></i>Add Module
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Course Info Card -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Course Info</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Modules:</strong> @Model.Course.Modules.Count</p>
                        <p><strong>Total Lessons:</strong> @Model.Course.Modules.Sum(m => m.Lessons.Count)</p>
                        <p><strong>Status:</strong> 
                            @if (Model.Course.IsPublished)
                            {
                                <span class="badge bg-success">Published</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Draft</span>
                            }
                        </p>
                        <hr>
                        <div class="d-grid gap-2">
                            <a href="/Admin/Courses/Edit/@Model.Course.CourseID" class="btn btn-outline-primary">
                                <i class="fas fa-edit me-2"></i>Edit Course
                            </a>
                            <a href="/Admin/Courses" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Courses
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">Course not found.</div>
    }
</div>
