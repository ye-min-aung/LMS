@page "/Admin/Courses/Modules/{id:int}"
@model LMSPlatform.Pages.Admin.Courses.ModulesModel
@{
    ViewData["Title"] = "Manage Modules";
}

<div class="page-header">
    <div class="container">
        <h1><i class="fas fa-layer-group me-3"></i>Manage Modules</h1>
        <p class="mb-0">@Model.Course?.GetTitle() - Add and organize course content</p>
    </div>
</div>

<div class="container">
    @if (Model.Course != null)
    {
        <div class="row">
            <div class="col-lg-8">
                <!-- Existing Modules -->
                @if (Model.Course.Modules.Any())
                {
                    <div class="accordion mb-4" id="modulesAccordion">
                        @foreach (var module in Model.Course.Modules)
                        {
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" 
                                            data-bs-toggle="collapse" data-bs-target="#module-@module.ModuleID">
                                        <span class="me-3">
                                            <i class="fas fa-folder text-warning"></i>
                                        </span>
                                        <strong>Module @module.ModuleOrder:</strong>&nbsp;@module.GetTitle()
                                        <span class="badge bg-secondary ms-auto me-3">@module.Lessons.Count lessons</span>
                                    </button>
                                </h2>
                                <div id="module-@module.ModuleID" class="accordion-collapse collapse" 
                                     data-bs-parent="#modulesAccordion">
                                    <div class="accordion-body">
                                        <!-- Lessons List -->
                                        @if (module.Lessons.Any())
                                        {
                                            <ul class="list-group mb-3">
                                                @foreach (var lesson in module.Lessons)
                                                {
                                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                                        <div>
                                                            @if (lesson.LessonType == "Video")
                                                            {
                                                                <i class="fas fa-play-circle text-primary me-2"></i>
                                                            }
                                                            else
                                                            {
                                                                <i class="fas fa-file-alt text-info me-2"></i>
                                                            }
                                                            @lesson.GetTitle()
                                                        </div>
                                                        <div>
                                                            <a href="/Admin/Courses/Lesson/@lesson.LessonID" 
                                                               class="btn btn-sm btn-outline-primary me-1" title="Add Quiz/Assignment">
                                                                <i class="fas fa-cog"></i>
                                                            </a>
                                                            <form method="post" asp-page-handler="DeleteLesson" class="d-inline">
                                                                <input type="hidden" name="courseId" value="@Model.Course.CourseID" />
                                                                <input type="hidden" name="lessonId" value="@lesson.LessonID" />
                                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                                        onclick="return confirm('Delete this lesson?')">
                                                                    <i class="fas fa-trash"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <p class="text-muted">No lessons yet.</p>
                                        }

                                        <!-- Add Lesson Buttons -->
                                        <div class="d-flex gap-2">
                                            <button type="button" class="btn btn-sm btn-primary" 
                                                    data-bs-toggle="modal" data-bs-target="#addVideoModal-@module.ModuleID">
                                                <i class="fas fa-video me-1"></i>Add Video Lesson
                                            </button>
                                            <button type="button" class="btn btn-sm btn-info" 
                                                    data-bs-toggle="modal" data-bs-target="#addTextModal-@module.ModuleID">
                                                <i class="fas fa-file-alt me-1"></i>Add Text Lesson
                                            </button>
                                        </div>

                                        <!-- Add Video Lesson Modal -->
                                        <div class="modal fade" id="addVideoModal-@module.ModuleID" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title"><i class="fas fa-video me-2"></i>Add Video Lesson</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <form method="post" asp-page-handler="AddLesson">
                                                        <div class="modal-body">
                                                            <input type="hidden" name="courseId" value="@Model.Course.CourseID" />
                                                            <input type="hidden" name="moduleId" value="@module.ModuleID" />
                                                            <input type="hidden" name="LessonType" value="Video" />
                                                            <div class="mb-3">
                                                                <label class="form-label">Lesson Title (English)</label>
                                                                <input type="text" name="Title_EN" class="form-control" required>
                                                            </div>
                                                            <div class="mb-3">
                                                                <label class="form-label">Video URL</label>
                                                                <input type="url" name="ContentURL" class="form-control" 
                                                                       placeholder="YouTube, Vimeo, or direct video URL">
                                                                <small class="text-muted">Supports YouTube, Vimeo, or direct MP4 links</small>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                            <button type="submit" class="btn btn-primary">Add Video Lesson</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Add Text Lesson Modal -->
                                        <div class="modal fade" id="addTextModal-@module.ModuleID" tabindex="-1">
                                            <div class="modal-dialog modal-lg">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title"><i class="fas fa-file-alt me-2"></i>Add Text Lesson</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <form method="post" asp-page-handler="AddLesson">
                                                        <div class="modal-body">
                                                            <input type="hidden" name="courseId" value="@Model.Course.CourseID" />
                                                            <input type="hidden" name="moduleId" value="@module.ModuleID" />
                                                            <input type="hidden" name="LessonType" value="Text" />
                                                            <div class="mb-3">
                                                                <label class="form-label">Lesson Title (English)</label>
                                                                <input type="text" name="Title_EN" class="form-control" required>
                                                            </div>
                                                            <div class="mb-3">
                                                                <label class="form-label">Lesson Content</label>
                                                                <textarea name="Content_EN" class="form-control text-editor" rows="10"></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                            <button type="submit" class="btn btn-info">Add Text Lesson</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Delete Module -->
                                        <div class="mt-3 text-end">
                                            <form method="post" asp-page-handler="DeleteModule" class="d-inline">
                                                <input type="hidden" name="courseId" value="@Model.Course.CourseID" />
                                                <input type="hidden" name="moduleId" value="@module.ModuleID" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                        onclick="return confirm('Delete this module and all its lessons?')">
                                                    <i class="fas fa-trash me-1"></i>Delete Module
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        No modules yet. Add your first module to get started.
                    </div>
                }
            </div>

            <div class="col-lg-4">
                <!-- Add Module Card -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Add Module</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="AddModule">
                            <input type="hidden" name="courseId" value="@Model.Course.CourseID" />
                            <div class="mb-3">
                                <label class="form-label">Title (English)</label>
                                <input type="text" name="Title_EN" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Title (Myanmar)</label>
                                <input type="text" name="Title_MM" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-plus me-2"></i>Add Module
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Course Info Card -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Course Info</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Modules:</strong> @Model.Course.Modules.Count</p>
                        <p><strong>Total Lessons:</strong> @Model.Course.Modules.Sum(m => m.Lessons.Count)</p>
                        <p><strong>Status:</strong> 
                            @if (Model.Course.IsPublished)
                            {
                                <span class="badge bg-success">Published</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Draft</span>
                            }
                        </p>
                        <hr>
                        <div class="d-grid gap-2">
                            <a href="/Admin/Courses/Edit/@Model.Course.CourseID" class="btn btn-outline-primary">
                                <i class="fas fa-edit me-2"></i>Edit Course
                            </a>
                            <a href="/Admin/Courses" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Courses
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">Course not found.</div>
    }
</div>

@section Scripts {
    <!-- TinyMCE Editor -->
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        // Initialize TinyMCE when modal opens
        document.querySelectorAll('[id^="addTextModal"]').forEach(modal => {
            modal.addEventListener('shown.bs.modal', function() {
                const textarea = this.querySelector('.text-editor');
                if (textarea && !tinymce.get(textarea.id)) {
                    textarea.id = 'editor-' + Date.now();
                    tinymce.init({
                        selector: '#' + textarea.id,
                        height: 300,
                        menubar: false,
                        plugins: 'lists link image code table',
                        toolbar: 'undo redo | formatselect | bold italic underline | alignleft aligncenter alignright | bullist numlist | link image | code',
                        content_style: 'body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial; font-size: 14px; }',
                        setup: function(editor) {
                            editor.on('change', function() {
                                editor.save();
                            });
                        }
                    });
                }
            });
            
            modal.addEventListener('hidden.bs.modal', function() {
                const textarea = this.querySelector('.text-editor');
                if (textarea && tinymce.get(textarea.id)) {
                    tinymce.get(textarea.id).remove();
                }
            });
        });
    </script>
}
