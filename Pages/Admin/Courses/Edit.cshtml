@page "/Admin/Courses/Edit/{id:int}"
@model LMSPlatform.Pages.Admin.Courses.EditModel
@{
    ViewData["Title"] = "Edit Course";
}

<div class="page-header">
    <div class="container">
        <h1><i class="fas fa-edit me-3"></i>Edit Course</h1>
        <p class="mb-0">Update course information</p>
    </div>
</div>

<div class="container">
    @if (Model.Course != null)
    {
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" name="id" value="@Model.Course.CourseID" />
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Title (English)</label>
                                    <input type="text" name="Title_EN" class="form-control" 
                                           value="@Model.Course.Title_EN" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Title (Myanmar)</label>
                                    <input type="text" name="Title_MY" class="form-control"
                                           value="@Model.Course.Title_MM">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Description (English)</label>
                                    <textarea name="Description_EN" class="form-control" rows="4">@Model.Course.Description_EN</textarea>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Description (Myanmar)</label>
                                    <textarea name="Description_MY" class="form-control" rows="4">@Model.Course.Description_MM</textarea>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Price (MMK)</label>
                                    <input type="number" name="Price" class="form-control" 
                                           value="@Model.Course.Price" min="0">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Thumbnail URL</label>
                                    <input type="url" name="ThumbnailURL" class="form-control" 
                                           value="@Model.Course.ThumbnailURL" placeholder="https://...">
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input type="checkbox" name="IsPublished" value="true" 
                                           class="form-check-input" id="isPublished"
                                           @(Model.Course.IsPublished ? "checked" : "")>
                                    <label class="form-check-label" for="isPublished">Published</label>
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Save Changes
                                </button>
                                <a href="/Admin/Courses/Modules/@Model.Course.CourseID" class="btn btn-outline-secondary">
                                    <i class="fas fa-layer-group me-2"></i>Manage Modules
                                </a>
                                <a href="/Admin/Courses" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">Course not found.</div>
    }
</div>
