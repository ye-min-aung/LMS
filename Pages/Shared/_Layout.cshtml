@using Microsoft.Extensions.Localization
@using LMSPlatform.Resources
@inject IStringLocalizer<SharedResource> Localizer

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LMS Platform</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Top Bar -->
    <div class="top-bar">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <span class="top-bar-text">
                        <i class="fas fa-envelope me-2"></i> support@lmsplatform.com
                        <span class="mx-3">|</span>
                        <i class="fas fa-phone me-2"></i> +95 9 123 456 789
                    </span>
                </div>
                <div class="col-md-6 text-end">
                    <div class="d-flex align-items-center justify-content-end gap-3">
                        <!-- Language Switcher -->
                        @{
                            var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
                            var returnUrl = Context.Request.Path + Context.Request.QueryString;
                        }
                        <div class="language-switcher">
                            <a href="/Language/SetLanguage?culture=en&returnUrl=@Uri.EscapeDataString(returnUrl)" 
                               class="lang-link @(currentCulture.StartsWith("en") ? "active" : "")">EN</a>
                            <span class="mx-1">|</span>
                            <a href="/Language/SetLanguage?culture=my&returnUrl=@Uri.EscapeDataString(returnUrl)" 
                               class="lang-link @(currentCulture.StartsWith("my") ? "active" : "")">မြန်မာ</a>
                        </div>
                        <div class="top-bar-social">
                            <a href="#"><i class="fab fa-facebook-f"></i></a>
                            <a href="#"><i class="fab fa-twitter"></i></a>
                            <a href="#"><i class="fab fa-linkedin-in"></i></a>
                            <a href="#"><i class="fab fa-youtube"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Header -->
    <header class="main-header">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="fas fa-graduation-cap brand-icon"></i>
                    <span class="brand-text">LMS<span class="brand-highlight">Platform</span></span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="fas fa-home me-1"></i> @Localizer["Home"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Courses/Index">
                                <i class="fas fa-book-open me-1"></i> @Localizer["Courses"]
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Dashboard/Index">
                                    <i class="fas fa-tachometer-alt me-1"></i> @Localizer["Dashboard"]
                                </a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/Admin/Dashboard">
                                        <i class="fas fa-cog me-1"></i> @Localizer["Admin"]
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <div class="nav-right">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <div class="dropdown user-dropdown">
                                <button class="btn btn-user dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle me-2"></i>@User.Identity.Name
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="/Identity/Account/Manage"><i class="fas fa-user me-2"></i>@Localizer["Profile"]</a></li>
                                    <li><a class="dropdown-item" href="/Dashboard/Certificates"><i class="fas fa-certificate me-2"></i>@Localizer["Certificates"]</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post">
                                            <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>@Localizer["Logout"]</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a href="/Identity/Account/Login" class="btn btn-outline-light me-2">
                                <i class="fas fa-sign-in-alt me-1"></i> @Localizer["Login"]
                            </a>
                            <a href="/Identity/Account/Register" class="btn btn-accent">
                                <i class="fas fa-user-plus me-1"></i> @Localizer["Register"]
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="site-footer">
        <div class="footer-main">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="footer-widget">
                            <h4 class="widget-title">
                                <i class="fas fa-graduation-cap me-2"></i>LMS Platform
                            </h4>
                            <p>Empowering learners with quality education. Access courses anytime, anywhere and achieve your learning goals.</p>
                            <div class="footer-social">
                                <a href="#"><i class="fab fa-facebook-f"></i></a>
                                <a href="#"><i class="fab fa-twitter"></i></a>
                                <a href="#"><i class="fab fa-linkedin-in"></i></a>
                                <a href="#"><i class="fab fa-youtube"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-6 mb-4">
                        <div class="footer-widget">
                            <h5 class="widget-title">Quick Links</h5>
                            <ul class="footer-links">
                                <li><a href="/">Home</a></li>
                                <li><a href="/Courses">Courses</a></li>
                                <li><a href="/About">About Us</a></li>
                                <li><a href="/Contact">Contact</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="footer-widget">
                            <h5 class="widget-title">Categories</h5>
                            <ul class="footer-links">
                                <li><a href="#">Web Development</a></li>
                                <li><a href="#">Mobile Development</a></li>
                                <li><a href="#">Data Science</a></li>
                                <li><a href="#">Business</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="footer-widget">
                            <h5 class="widget-title">Contact Info</h5>
                            <ul class="footer-contact">
                                <li><i class="fas fa-map-marker-alt"></i> Yangon, Myanmar</li>
                                <li><i class="fas fa-phone"></i> +95 9 123 456 789</li>
                                <li><i class="fas fa-envelope"></i> support@lmsplatform.com</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p class="mb-0">&copy; 2025 LMS Platform. All rights reserved.</p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <a href="#">Privacy Policy</a>
                        <span class="mx-2">|</span>
                        <a href="#">Terms of Service</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>