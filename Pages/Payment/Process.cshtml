@page "{id:int}"
@model LMSPlatform.Pages.Payment.ProcessModel
@{
    ViewData["Title"] = "Process Payment";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">
                    @Model.ErrorMessage
                </div>
                <a href="/Courses" class="btn btn-primary">Back to Courses</a>
            }
            else if (Model.Payment != null)
            {
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0"><i class="bi bi-credit-card me-2"></i>KBZ Pay Payment</h4>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <img src="/images/kbzpay-logo.png" alt="KBZ Pay" style="max-width: 150px;" onerror="this.style.display='none'">
                            <h5 class="mt-3">@Model.Payment.Enrollment?.Course?.Title</h5>
                        </div>
                        
                        <div class="border rounded p-3 mb-4 bg-light">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Course Price:</span>
                                <strong>@Model.Payment.Amount.ToString("N0") MMK</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Transaction ID:</span>
                                <code>@Model.Payment.TransactionID</code>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Status:</span>
                                <span class="badge bg-warning">Pending</span>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            <small>This is a demo payment. Click "Confirm Payment" to simulate a successful payment.</small>
                        </div>

                        <div class="d-grid gap-2">
                            <form method="post" asp-page-handler="Confirm">
                                <input type="hidden" name="paymentId" value="@Model.Payment.PaymentID" />
                                <button type="submit" class="btn btn-success btn-lg w-100">
                                    <i class="bi bi-check-circle me-2"></i>Confirm Payment
                                </button>
                            </form>
                            <form method="post" asp-page-handler="Cancel">
                                <input type="hidden" name="paymentId" value="@Model.Payment.PaymentID" />
                                <button type="submit" class="btn btn-outline-danger w-100">
                                    <i class="bi bi-x-circle me-2"></i>Cancel
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
