@page
@model LMSPlatform.Pages.Dashboard.CertificatesModel
@{
    ViewData["Title"] = "My Certificates";
}

<div class="page-header">
    <div class="container">
        <h1><i class="fas fa-certificate me-3"></i>My Certificates</h1>
        <p class="mb-0">View and download your earned certificates</p>
    </div>
</div>

<div class="container">
    @if (Model.Certificates.Any())
    {
        <div class="row g-4">
            @foreach (var cert in Model.Certificates)
            {
                <div class="col-lg-6">
                    <div class="certificate-card">
                        <div class="cert-icon">
                            <i class="fas fa-award"></i>
                        </div>
                        <h4 class="mb-3">@cert.Course?.GetTitle()</h4>
                        <div class="cert-details mb-4">
                            <p class="mb-2">
                                <i class="fas fa-calendar text-primary me-2"></i>
                                <strong>Issued:</strong> @cert.IssuedDate.ToString("MMMM dd, yyyy")
                            </p>
                            <p class="mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <strong>Completed:</strong> @cert.CompletionDate.ToString("MMMM dd, yyyy")
                            </p>
                            <p class="mb-2">
                                <i class="fas fa-star text-warning me-2"></i>
                                <strong>Final Grade:</strong> @cert.FinalGrade.ToString("F1")%
                            </p>
                            <p class="mb-0">
                                <i class="fas fa-fingerprint text-info me-2"></i>
                                <strong>Certificate ID:</strong> <code>@cert.UniqueCertID</code>
                            </p>
                        </div>
                        <div class="cert-actions">
                            <a href="/api/certificate/@cert.CertificateID/download" class="btn btn-primary me-2">
                                <i class="fas fa-download me-1"></i> Download PDF
                            </a>
                            <a href="/certificate/verify/@cert.UniqueCertID" class="btn btn-outline-secondary">
                                <i class="fas fa-check-double me-1"></i> Verify
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="empty-state">
                <i class="fas fa-certificate fa-4x text-muted mb-4"></i>
                <h3>No Certificates Yet</h3>
                <p class="text-muted mb-4">Complete courses to earn certificates and showcase your achievements.</p>
                <a href="/Courses" class="btn btn-primary">
                    <i class="fas fa-book-open me-2"></i>Browse Courses
                </a>
            </div>
        </div>
    }
</div>

<style>
.certificate-card {
    background: linear-gradient(135deg, #fff9e6 0%, #fff5d6 100%);
    border: 2px solid #ffb606;
    border-radius: 15px;
    padding: 30px;
    text-align: center;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
}

.certificate-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(255, 182, 6, 0.3);
}

.certificate-card::before {
    content: '';
    position: absolute;
    top: -30px;
    right: -30px;
    width: 100px;
    height: 100px;
    background: rgba(255, 182, 6, 0.2);
    border-radius: 50%;
}

.certificate-card::after {
    content: '';
    position: absolute;
    bottom: -20px;
    left: -20px;
    width: 80px;
    height: 80px;
    background: rgba(255, 182, 6, 0.15);
    border-radius: 50%;
}

.cert-icon {
    font-size: 3rem;
    color: #ffb606;
    margin-bottom: 20px;
}

.cert-details {
    text-align: left;
    background: rgba(255, 255, 255, 0.7);
    border-radius: 10px;
    padding: 20px;
}

.cert-actions {
    position: relative;
    z-index: 1;
}

.empty-state {
    padding: 60px 20px;
}
</style>
